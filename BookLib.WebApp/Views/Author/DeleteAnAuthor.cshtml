@{
    ViewData["Title"] = "Enter the name of an author to delete";
}
<h1>@ViewData["Title"]</h1>

<div id="AuthorForm" style="text-align: center;">
    <form method="post" asp-controller="Author" asp-action="DeleteAnAuthor">
        <input size="50" name="authorname" required placeholder="Enter the name of an author" />
        <input type="submit" value="Delete an author" />
    </form>
</div>